{
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true
    },
    "editor.tabSize": 4,
    "editor.detectIndentation": true,
    "editor.wordWrap": "on",
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
    },
    "tasks.autoDetect": "on",
    "tasks.json": {
        "files.exclude": {
            "**/.vscode/tasks.json": true
        }
    },
    "files.associations": {
        "*.md": "markdown",
        "stm32f4xx_hal.h": "c",
        "stm32f4xx_hal_conf.h": "c",
        "main.h": "c"
    },
    "editor.formatOnSave": true
}